<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Postado a <%= time_ago_in_words(@post.created_at) %>
    <% if user_signed_in? %>
      | <%= link_to 'Editar', edit_post_path(@post) %>
      | <%= link_to 'Deletar', post_path(@post), method: :delete, data: { confirm: 'Você tem certeza que deseja deletar?' } %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
    <h2><%= @post.comments.count %> Comentário(s)</h2>
    <%= render @post.comments %>

    <h3>Deixe seu comentário:</h3>
    <%= render 'comments/form' %>
  </div>
</div>
