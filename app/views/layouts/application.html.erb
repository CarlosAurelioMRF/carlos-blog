<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.svg" %>
        <% end %>
      </div>

      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Blog", root_path %></li>
        <li>Sobre</li>
      </ul>

      <ul>
        <li class="category">Social Media</li>
        <li><a href="https://twitter.com/CarlosSpok">Twitter</a></li>
        <li><a href="https://www.instagram.com/carlosspok/">Instagram</a></li>
        <li><a href="https://github.com/CarlosAurelioMRF">Github</a></li>
        <li><a href="mailto:carlosspok@gmail.com">Email</a></li>
      </ul>

      <p class="sign_in">Login</p>
    </div>

    <div id="main_content">
      <div id="header">
        <p>Publicações</p>

        <div class="buttons">
          <button class="button"><%= link_to "Nova Publicação", new_post_path %></button>
          <button class="button">Sair</button>
        </div>
      </div>

      <% flash.each do | name, message | %>
        <%= content_tag(:div, message, class: "alert") %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
